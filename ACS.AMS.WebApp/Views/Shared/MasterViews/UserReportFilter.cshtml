@model Tuple<string,string> 
@{
    var lastString = Model.Item1[Model.Item1.Length - 1];
}
<script>
    function GetAdditionReportFilterParam(m1,m2) {
        //var val = $("#NotificationModuleID").data("kendoComboBox").text();
        //if (val.indexOf("Select") != 0) {
        //    return
        //    {
