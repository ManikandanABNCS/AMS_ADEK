                @(Html.Hidden("TransactionNo", res.TransactionID))
                @(Html.Hidden("ApprovalHistoryID", historyID))
               @*  @(Html.Kendo().DropDownList()
                    .Name("TransactionNo")
                    .HtmlAttributes(new { style = "width:200px!important " })
                 
