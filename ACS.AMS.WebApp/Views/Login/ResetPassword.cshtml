@model ACS.AMS.WebApp.Models.ForgetPasswordModel

@{
    Layout = null;
}
<!DOCTYPE html>
<html class="login-page">
<head>
    <meta charset="utf-8">
    <title>We One</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
    <link href="~/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/js/jquery.min.js"></script>
    <script src="~/js/popper.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/kendo/2020.2.513/kendo.all.min.js"></script>
    <link href="~/css/style.css" rel="stylesheet" />
    <link href="~/css/ThemeBuilder.css" rel="stylesheet" />
</head>

<script>
    function ValidateUser() {
        var username = document.getElementById("UserName").value;

        if (username == "") {
            $('#errUsername').show();
            $('#errMsg').hide();
            return false;
        } else {
            $('#errUsername').hide();
            $('#errMsg').show();
            return true;
        }
    }
</script>



<body>
    @using (Html.BeginForm())
    {
    <!-- Main wrapper  -->
        <div id="main-wrapper">
            <div class="unix-login">
                <div class="container-fluid">
                    <div class="row justify-content-center">
                        <div class="col-lg-5">
                            <div class="login-content card">
                                <div class="login-form">
                                    <h4>Reset Password</h4>
                                    <p style="font-size:14px;">
                                        To reset your password, enter the registered mail Address you use to checkpoint.
                                        Reset information will be send to your registered mail Address.
                                    </p>
                                    <div class="form-group">



                                        @Html.TextBoxFor(model => model.Email, new { @id = "UserName", @Class = "k-textbox", @Style = "width:100%", @placeholder = "E-Mail Address" })



                                        <p id="errUsername" style="color: red;text-align:left; font-size: 13px;display:none;margin: 5px 0 0;">
                                            Email is Required
                                        </p>

                                        @{
        string errormsg = "";
        if (ViewData["ErrorMesg"] != null)
        {
            errormsg = ViewData["ErrorMesg"].ToString();

            <p style="color: red; font-size: 13px; font-weight: 100;display:block;margin: 5px 0 0;" id="errMsg">

                @{  @errormsg }

            </p>
        }
                                        }

                                       



                                    </div>

                                    <input type="submit" class="btn prmy-bg prmy-bg-hvr" onclick="return ValidateUser()" value="Submit" />



                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        }
    <!-- End Wrapper -->
    }
</body>

</html>
<script>
    $(document).ready(function () {
        $("#UserName").focus();
    });

    function load() {

        loadContentPage("/Account/Login");
    }

</script>

