@model string
<style>
    .k-tool-icon, .k-tool-icon.k-state-hover, .k-tool-icon.k-state-active, .k-tool-icon.k-state-active.k-state-hover {
        background-image: url('../../Content/kendo/2013.1.514/Default/sprite.png');
    }

    .k-tool-icon, .k-grouping-dropclue, .k-drop-hint, .k-column-menu .k-sprite {
        background-image: url('../../Content/kendo/2013.1.514/Default/sprite.png');
        border-color: transparent;
    }

        .k-tool-icon.k-state-hover {
            background-color: #FFF;
            border: none;
        }

    .htmleditor .k-header {
        background-color: #E9E9E9;
        padding: 5px;
    }

    .htmleditor {
        /*margin:20px auto;*/
        width: 760px;
    }

        .htmleditor .k-tool-icon {
            margin: 1px !important;
        }

    .k-editor-template {
        width: 200px;
    }

