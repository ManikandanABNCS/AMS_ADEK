</style>
<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <title>AMS - Login</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
    <link href="~/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/js/jquery.min.js"></script>
    <script src="~/js/popper.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <link href="~/css/Login.css" rel="stylesheet" />
    <link href="~/css/Index.css" rel="stylesheet" />
    @* <link href="~/css/ThemeBuilder.css" rel="stylesheet" /> *@

    @* <link href="@Url.Content("~/lib/kendo-ui/styles/default-main.css")" rel="stylesheet" type="text/css" /> *@
    <script src="@Url.Content("~/lib/kendo-ui/js/jquery.min.js")"></script>
    <script src="@Url.Content("~/lib/kendo-ui/js/jszip.min.js")"></script>
    <script src="@Url.Content("~/lib/kendo-ui/js/kendo.all.min.js")"></script>
    <script src="@Url.Content("~/lib/kendo-ui/js/kendo.aspnetmvc.min.js")"></script>


</head>
<body>
  @*   <form asp-action="Login"> *@
     @using (Html.BeginForm("Login", "Login", FormMethod.Post, new { Name = "Form1" }))
    { 
        <div class="desktop-5-parent">
            <div class="desktop-5">
                <div class="businesspeople-meeting-plan-an-parent">
                  @*   <img class="businesspeople-meeting-plan-an-icon" alt="" src="/css/images/businesspeoplemeetingplananalysisgraphcompanyfinancestrat-5-1@2x.png">
                    <img class="businesspeople-meeting-plan-an-icon" alt="" src="/css/images/abstractlowpolybackgroundwithconnectinglinesdots-1@2x.png"> *@
                </div>
                <div class="group-parent">
                    <div class="group-container">
                        <div class="group-container">
                            <div class="group-container">
                                <div class="blue-rectangle-login"></div>
                                <div class="group-parent1">
                                    <div class="rectangle-wrapper">
                                        <div class="group-child"></div>
                                    </div>
                                    <div class="enterusername"> @Html.TextBoxFor(model => model.UserName, new { id = "UserName", @Class = "logintextBox", @Style = "width:100%;", @tabindex = 1, @Placeholder = "User Name" })</div>
                                    <div class="username">Username</div>
                                </div>
                                <div class="group-parent2">
                                    <div class="rectangle-container">
                                        <div class="group-item"></div>
                                    </div>
                                    <div class="enterpassword"> @Html.PasswordFor(model => model.Password, new { id = "Password", @Class = "logintextBox", @Style = "width:100%", @tabindex = 2, @Placeholder = "Password" })</div>
                                    <div class="password">Password</div>
                                </div>
                            </div>
                            <div class="rectangle-parent">
                                <div class="group-inner"></div>
                                <div class="login">  <input type="submit" value="Login" class="form-control" style="background-color: #DAE5FF;"></div>
                            
                            </div>
                        </div>
                        <div class="forgot-password">Forgot password?</div>
                        <div class="remember-me-parent">
                            <div class="remember-me">Remember me</div>
                            <div class="rectangle-div"></div>
                        </div>
                    </div>
                    <div class="group-parent3">
                        <img class="group-icon" alt="" src="/css/images/group-5.svg">

                        <div class="group-wrapper">
                            <div class="asset-management-system-wrapper">
                                <div class="asset-management-system">
                                    ASSET MANAGEMENT SYSTEM
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <img class="desktop-5-child" alt="" src="/css/images/group-391.svg">

                <img class="desktop-5-item" alt="" src="/css/images/group-392.svg">
            </div>
        </div>


    }
</body>
    
</html>

