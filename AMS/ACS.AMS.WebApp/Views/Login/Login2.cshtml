@model ACS.AMS.WebApp.Models.LoginModel
@using ACS.AMS.DAL.DBModel
@using ACS.AMS.DAL
@using ACS.AMS.WebApp.Models
@using ACS.AMS.DAL.DBContext

@{
    Layout = null;
    var data = AMSContext.CreateNewContext();
}
<style type="text/css">
	.has-float-label{display:block;position:relative}
	.has-float-label label,
	.has-float-label>span{position:absolute;cursor:text;font-size:75%;opacity:1;-webkit-transition:all .2s;transition:all .2s;top:-.5em;left:.75rem;z-index:3;line-height:1;padding:0 1px}
