@model ACS.AMS.WebApp.Models.ForgetPasswordModel

@{
    Layout = null;
}
<!DOCTYPE html>
<html class="login-page"
<head>
    <meta charset="utf-8">
    <title>Checkpoint ResetPassword</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
    <link href="~/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/js/jquery.min.js"></script>
    <script src="~/js/popper.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/kendo/2020.2.513/kendo.all.min.js"></script>
    <link href="~/css/style.css" rel="stylesheet" />
    <link href="~/css/ThemeBuilder.css" rel="stylesheet" />
     <style>
    .login-content {
        margin: 35% 0;
    }
    .login-form {    
    padding: 30px 30px 25px;   
}
</style>
</head>

<body>
  
      <!-- Main wrapper  -->
        <div id="main-wrapper">
            <div class="unix-login">
                <div class="container-fluid">
                    <div class="row justify-content-center">
                        <div class="col-lg-5">
                            <div class="login-content card">
                                <div class="login-form">
                                    <h4>Reset Password</h4>
                                    <p style="font-size:14px;">
                                        @*Password  Details sent to the registered mail ID*@
                                        Your New Password : @ViewBag.NewPassword
                                    </p>
                                    <div>
                                        @Html.ActionLink("Continue", "Login", "Login", new { @class = "btn prmy-bg prmy-bg-hvr" })
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    
    </body>

    <script>
        function load() {

            loadContentPage("/Account/Login");
        }

    </script>
</html>